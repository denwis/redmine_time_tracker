<div class="flash notice" id="flash_error">
    <%= @issue.nil? ? l(:time_tracker_label_start_new_tracker) : l(:time_tracker_label_update_and_start_new_tracker) %>
</div>
<%= render 'issues/update_issue' unless @issue.nil? %>

<div class="contextual">
<% if !@query.new_record? && @query.editable_by?(User.current) %>
  <%= link_to l(:button_edit), edit_query_path(@query), :class => 'icon icon-edit' %>
  <%= delete_link query_path(@query), :title => l(:button_reset) %>
<% end %>
</div>
<h3><%= @query.new_record? ? l(:label_issue_plural) : h(@query.name) %></h3>

<% if @query.valid? %>
<% if @issues.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<%= render :partial => 'issues/list', :locals => {:issues => @issues, :query => @query} %>
<% end %>
<% end %>

<%= javascript_tag "updateTimeTrackerMenu();" %>
